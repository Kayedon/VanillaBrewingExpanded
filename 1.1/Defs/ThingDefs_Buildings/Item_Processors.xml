<?xml version="1.0" encoding="utf-8" ?>
<Defs> 

	<ThingDef ParentName="BuildingBase">
		<defName>VBE_SodaFountain</defName>
		<label>soda fountain</label>
		<description>An all-in-one soda manufacturing unit. Syrup is mixed with water thoroughly, carbonated and then deeply chilled before being dispensed into sterilized bottles.</description>
		<thingClass>ItemProcessor.Building_ItemProcessor</thingClass>
		<graphicData>
			<texPath>Things/Buildings/VBE_SodaDispenser</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.5,1.5)</drawSize>
			<shaderType>CutoutComplex</shaderType>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<thingCategories>
			<li>BuildingsProduction</li>
		</thingCategories>
		<costList>
			<Steel>40</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>true</rotatable>
		<neverMultiSelect>true</neverMultiSelect>
		<uiIconScale>0.8</uiIconScale>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<Mass>5</Mass>
			<WorkToBuild>800</WorkToBuild>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<tickerType>Rare</tickerType>
		<size>(1,1)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<researchPrerequisites>
			<li>VBE_MixologyResearch</li>
		</researchPrerequisites>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<shortCircuitInRain>false</shortCircuitInRain>
				<basePowerConsumption>50</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="ItemProcessor.CompProperties_ItemProcessor">
				<buildingOnGraphic>Things/Buildings/VBE_SodaDispenser</buildingOnGraphic>
				<numberOfInputs>1</numberOfInputs>
				<acceptsNoneAsInput>false</acceptsNoneAsInput>
				<InsertFirstItemDesc>VBE_InsertSyrupDesc</InsertFirstItemDesc>
				<transfersIngredientLists>true</transfersIngredientLists>

				<isSemiAutomaticMachine>true</isSemiAutomaticMachine>
				<resetSemiautomaticIcon>UI/VBE_SyrupReset</resetSemiautomaticIcon>

				<chooseIngredientsIcon>UI/VBE_EmptySyrupIcon</chooseIngredientsIcon>

				<bringIngredientsText>VBE_StartInsertion</bringIngredientsText>
				<bringIngredientsDesc>VBE_StartInsertionDesc</bringIngredientsDesc>
				<bringIngredientsIcon>UI/VBE_InsertSyrup</bringIngredientsIcon >

				<cancelIngredientsText>VBE_CancelBringingSyrup</cancelIngredientsText> 
				<cancelIngredientsDesc>VBE_CancelBringingSyrupDesc</cancelIngredientsDesc>
				<cancelIngredientsIcon>UI/VBE_CancelSyrupp</cancelIngredientsIcon> 

				<noPowerDestroysProgress>true</noPowerDestroysProgress>
				<rareTicksToDestroy>20</rareTicksToDestroy>
				<noPowerDestroysMessage>VBE_SyrupFailurePower</noPowerDestroysMessage>

				<destroyIngredientsAtStartOfProcess>true</destroyIngredientsAtStartOfProcess>

			</li>

		</comps>
		<minifiedDef>MinifiedThing</minifiedDef>
	</ThingDef>

	





</Defs>
