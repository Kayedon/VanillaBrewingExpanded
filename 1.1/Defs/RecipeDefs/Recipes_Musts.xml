<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>VBE_MakeSodaSyrup</defName>
		<label>make soda syrup</label>
		<description>Make soda syrup by mixing natural fruit juice with high fructose corn syrup.</description>
		<jobString>Making soda syrup.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<workSkill>Cooking</workSkill>
		<effectWorking>Cook</effectWorking>
		<workAmount>1000</workAmount>
		<soundWorking>Recipe_Brewing</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<recipeUsers>
			<li>Brewery</li>	
			<li>VBE_Bar</li>			
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>VBE_Juice</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>RawCorn</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>			
			<thingDefs>
				<li>VBE_Juice</li>
				<li>RawCorn</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>			
			<thingDefs>
				<li>VBE_Juice</li>
				<li>RawCorn</li>
			</thingDefs>
		</defaultIngredientFilter>
		<products>
			<VBE_SodaSyrup>20</VBE_SodaSyrup>
		</products>
		<skillRequirements>
			<Cooking>4</Cooking>
		</skillRequirements>
		<researchPrerequisite>VBE_MixologyResearch</researchPrerequisite>
	</RecipeDef>

